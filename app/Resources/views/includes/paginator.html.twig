<div class="paginator text-center" style="margin-top: 1em">
    <ul class="pagination">
        {% if paginator.currentPage > 1 %}
            <li class="page-item"><a class="page-link" href="{{ path("doctissimo_blog_homepage", {'page' : paginator.currentPage-1 }) }}">Previous</a></li>
        {% endif %}

        {% for page in paginator.navigationIteration %}
            {% if paginator.currentPage == page %}
                <li class="page-item active"><a href="#" class="page-link">{{ page }}</a></li>
            {% else %}
                <li class="page-item">
                    <a href="{{ path("doctissimo_blog_homepage", {'page' : page }) }}" class="page-link">{{ page }}</a>
                </li>
            {% endif%}

        {% endfor %}

        {% if paginator.currentPage < paginator.maximumPages %}
            <li class="page-item"><a class="page-link" href="{{ path("doctissimo_blog_homepage", {'page' : paginator.currentPage+1 }) }}">Next</a></li>
        {% endif %}
    </ul>
    {% set itemsName = "articles" %}

    <div>
        {% if paginator.getStatsDisplay.toItems  == 1%}
            <strong>{{ paginator.getStatsDisplay.maxItems }}</strong> {{ itemsName }}
        {% else %}
            De {{ paginator.getStatsDisplay.fromItems + 1 }} Ã  {{ paginator.getStatsDisplay.toItems }}
            sur <strong>{{ paginator.getStatsDisplay.maxItems }}</strong> {{ itemsName }}
        {% endif %}

    </div>
</div>